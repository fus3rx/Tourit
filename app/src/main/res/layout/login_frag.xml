<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Using.."
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:id="@+id/text"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/emailLogin"
        android:background="#8cc3dc"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:minHeight="40dp"
        android:textSize="18sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/emailLogin"
        android:id="@+id/spacer"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailLogin"
        android:layout_marginTop="-20dp"
        android:id="@+id/revealLayout"
        android:visibility="invisible"
        android:background="#e5e3e3">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/email"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="email"
            android:inputType="textEmailAddress"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/email"
            android:id="@+id/pass"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="password"
            android:inputType="textPassword"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pass"
            android:layout_marginTop="15dp"
            android:id="@+id/login"
            android:text="Log In"
            android:background="#ffffff"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/login"/>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spacer"
        android:id="@+id/wrapper"
        android:layout_centerHorizontal="true">

        <com.google.android.gms.common.SignInButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/gSignin"
            android:background="@color/colorRed"
            />
       <com.facebook.login.widget.LoginButton
           xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/gSignin"
            android:id="@+id/fSignin"
           android:textAlignment="textStart"
           android:textSize="18sp"
           facebook:com_facebook_login_text="Facebook"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fSignin"
            android:layout_marginTop="30dp"
            android:text="Do not have an account? Sign up here"
            android:id="@+id/tapSignUp"/>

    </RelativeLayout>




</RelativeLayout>
